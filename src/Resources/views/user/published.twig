{% extends "skeleton.twig" %}

{% block extend_head %}
    <style type="text/css">
        #published {
            width: 100%;
            height: 100%;
            clear: both;
        }
        .post {
            display: inline-block;
            width: 30%;
            margin-right: 1%;
            margin-bottom: 10px;
            border: 1px solid #eee;
            padding: 10px;
        }
        .post div {
            margin-bottom: 5px;
        }
    </style>
{% endblock %}

{% block title %}{{ h1 }}{% endblock %}

{% block content %}
